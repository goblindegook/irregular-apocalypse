{
  "private": true,
  "name": "irregular-apocalypse",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn -s watch || yarn -s watch",
    "build": "NODE_ENV=production preact build",
    "watch": "preact watch",
    "lint": "eslint '{cypress,src}/**/*.{ts,tsx}'",
    "format": "prettier --write '{cypress,src}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "pretest": "yarn lint",
    "test": "yarn jest && start-server-and-test start http://localhost:8080 cypress:run",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{cypress,src}/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "{cypress,src}/**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testURL": "http://localhost",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.js",
      "\\.(css)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "4.1.1",
    "@fullhuman/postcss-purgecss": "1.3.0",
    "@pacote/eslint-config": "1.0.3",
    "@pacote/eslint-config-jest": "1.0.2",
    "@pacote/eslint-config-react": "1.0.2",
    "@testing-library/dom": "6.10.1",
    "@testing-library/preact": "1.0.2",
    "@types/jest": "24.0.23",
    "@types/ramda": "0.26.34",
    "@typescript-eslint/eslint-plugin": "2.7.0",
    "@typescript-eslint/parser": "2.7.0",
    "autoprefixer": "9.7.3",
    "cssnano": "4.1.10",
    "cypress": "3.4.1",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.6.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-cypress": "2.7.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "eslint-plugin-standard": "4.0.1",
    "fast-check": "1.18.1",
    "husky": "3.0.9",
    "identity-obj-proxy": "3.0.0",
    "if-env": "1.0.4",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "postcss-loader": "3.0.0",
    "preact-cli": "3.0.0-rc.6",
    "preact-cli-plugin-netlify": "1.5.0",
    "preact-render-to-string": "5.1.1",
    "prettier": "1.19.1",
    "start-server-and-test": "1.10.6",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.1",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "@pacote/computus": "1.2.0",
    "date-fns": "2.7.0",
    "localforage": "1.7.3",
    "preact": "10.0.5",
    "preact-helmet": "4.0.0-alpha-3",
    "preact-router": "3.1.0",
    "ramda": "0.26.1",
    "tailwindcss": "1.1.3"
  }
}
